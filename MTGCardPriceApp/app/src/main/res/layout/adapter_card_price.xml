<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cardAdapter_cardNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_view_padding_large"
        android:layout_marginTop="@dimen/text_view_padding_large"
        android:layout_weight="0.6"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardAdapter_cardMediumPriceTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Price" />

        <TextView
            android:id="@+id/cardAdapter_cardIsFoilTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="isRare" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cardAdapter_deleteIconImageView"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />
</LinearLayout>